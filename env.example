# === CONFIGURAÇÕES DO SISTEMA ===
# Global Economic Regime Analysis & Brazil Spillover Prediction System
# Baseado no Documento de Requisitos do Sistema (DRS) v1.0

# === INFORMAÇÕES BÁSICAS ===
APP_NAME="Global Economic Regime Analysis & Brazil Spillover Prediction System"
VERSION="1.0.0"
DEBUG=False
LOG_LEVEL=INFO

# === BANCO DE DADOS ===
# PostgreSQL com TimescaleDB para séries temporais
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/global_regime_analysis

# Redis para cache
REDIS_URL=redis://localhost:6379/0

# === APIS EXTERNAS ===
# FRED API (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key_here

# OECD API (Organisation for Economic Co-operation and Development)
OECD_API_KEY=your_oecd_api_key_here

# World Bank API
WORLD_BANK_API_KEY=your_worldbank_api_key_here

# Yahoo Finance (habilitado por padrão)
YAHOO_FINANCE_ENABLED=True

# === CONFIGURAÇÕES DE ANÁLISE ===
# Países para análise global (G7 + China + Brasil)
GLOBAL_COUNTRIES=["USA", "DEU", "JPN", "GBR", "FRA", "ITA", "CAN", "CHN", "BRA"]

# Número de regimes (2-6 conforme DRS)
MIN_REGIMES=2
MAX_REGIMES=6

# Horizonte de previsão (1-12 meses conforme DRS)
FORECAST_HORIZON=12

# Canais de spillover
SPILLOVER_CHANNELS=["trade", "commodity", "financial", "supply_chain"]

# === PERFORMANCE (RNF001-RNF010) ===
API_RESPONSE_TIME_MS=500
DASHBOARD_LOAD_TIME_S=2
ANALYSIS_EXECUTION_TIME_M=30
FORECAST_GENERATION_TIME_M=5

# === DISPONIBILIDADE (RNF011-RNF015) ===
UPTIME_SLA=99.9
BACKUP_FREQUENCY_H=6
RECOVERY_TIME_M=15

# === SEGURANÇA (RNF016-RNF025) ===
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === VALIDAÇÃO DE DADOS (RNF026-RNF035) ===
MAX_MISSING_DATA_PERCENT=10.0
OUTLIER_DETECTION_METHOD=modified_zscore
CROSS_VALIDATION_FOLDS=5

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
HOST=0.0.0.0
PORT=8000

# === CACHE ===
CACHE_TTL_SECONDS=3600
CACHE_REGIME_ANALYSIS_TTL=1800
CACHE_SPILLOVER_TTL=900